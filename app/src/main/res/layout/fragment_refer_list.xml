<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/refer_image"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:src="@drawable/pic4" />

        <TextView
            android:id="@+id/refer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="空间科学先导专项启动
瞄准两大科学前沿开展卫星研制" />

        <TextView
            android:id="@+id/refer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中国科学院7月4日宣布“空间科学（二期）”战略性先导科技专项正式启动" />

        <TextView
            android:id="@+id/refer_resource"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="end"
            android:text="成都科技" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@id/navigation"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/refer_list"
        android:name="com.example.wangluo.ReferFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.wangluo.Fragment.ReferFragment"
        tools:listitem="@layout/fragment_refer_item" />
    </LinearLayout>